{{#each blogs as |blog|}}

  <div class="row">

    <div class="container blogBox">
			<div class="row  justify-content-center headerRow">
      <div class="col-8">
        <h2>
          <a class="blogTitle text-uppercase" href="/blog/{{blog.id}}">{{blog.title}}</a>
        </h2>
        <div>
    <p>Created by: {{blog.user.name}} on {{format_date blog.date_created}}</p>
</div>
			</div>
    <div class="blogDescription">
      <p class="text-center blogDescMain">
        {{blog.description}}
      </p>
    </div>
    </div>

  </div>

{{/each}}
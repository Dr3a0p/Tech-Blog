<section class="card">
  {{!-- blog id's> --}}
    <h3>{{name}}</h3>
    <br>
    <p>{{description}}</p>
    <p>Date Created: {{ format_date date_created}}</p>
    <p> Post By: {{User.name}}</p>
</section>

<section>
  <ul id="comments-list">
    <!-- comments -->
  </ul>
</section>

{{#if logged_in}}
<form class="new-comment-form" data-blog_id={{id}}>
  <div>
    <label for="comment">Comment</label>
    <input type="text" id="comment" placeholder="your comment here"/>
    <button id="submit-Comment">Submit</button>
</form>
{{else}}
<a href="./public/js/comments.js">Log in</a>
{{/if}}

<h2>Comments</h2>

  {{#each comments as |comment|}}
<section class="card">
  <p>{{comment.text}}</p>
  <p>{{comment.user.name}} {{format_date date_created}}</p>
</section>